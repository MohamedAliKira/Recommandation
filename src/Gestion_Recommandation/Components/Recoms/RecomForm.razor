@namespace Gestion_Recommandation.Components

<EditForm Model="_model" OnValidSubmit="SubmitFormAsync">
    <DataAnnotationsValidator />

    <MudTextField @bind-Value="@_model.NumeroReference" Label="N° Reference" Variant="Variant.Outlined" Adornment="Adornment.Start" HelperText="Required"
                  AdornmentIcon="@Icons.Material.Filled.Tag" />

    @*<MudDatePicker @bind-Date="@_model.DateReference" Label="Date Reference" PickerVariant="PickerVariant.Dialog" DisableToolbar="true" />*@

    <MudTextField @bind-Value="@_model.DeLaPart" Label="De La Part" Variant="Variant.Outlined" Adornment="Adornment.Start" HelperText="Required"
                  AdornmentIcon="@Icons.Material.Filled.Call" />

    <MudTextField @bind-Value="@_model.Source" Label="Source" Variant="Variant.Outlined" Adornment="Adornment.Start" HelperText="Required"
                  AdornmentIcon="@Icons.Material.Filled.Groups" />

    <MudTextField @bind-Value="@_model.Type" Label="Type" Variant="Variant.Outlined" Adornment="Adornment.Start" HelperText="Required"
                  AdornmentIcon="@Icons.Material.Filled.Person" />

    <MudTextField @bind-Value="@_model.IdentityRecommandation" Label="Identitée Recommandation" Variant="Variant.Outlined" Adornment="Adornment.Start" HelperText="Required"
                  AdornmentIcon="@Icons.Material.Filled.AccountBox" />

    <MudTextField @bind-Value="@_model.InstructionDRH" Label="Instruction Mr.DRH" Variant="Variant.Outlined" HelperText="Required"
                  Lines="5" T="string" />


    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="my-2">@_errorMessage</MudAlert>
    }

    <MudDivider DividerType="DividerType.FullWidth" Class="my-2" />

    <ValidationSummary />
    <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled="_isBusy"
               ButtonType="ButtonType.Submit" FullWidth="true">Enregistrer</MudButton>
</EditForm>

